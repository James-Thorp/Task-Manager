
<div class="container">
  <div class="row">
    <div class="card padding-top">
      <h2>Edit <%= @task.title %></h2>
      <%= form_for(@task) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-style' %>

      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-style' %>

      <%= f.label :completed? %>
      <%= f.check_box :completed %>
      <br>
      <br>
      <%= f.submit class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
</div>
