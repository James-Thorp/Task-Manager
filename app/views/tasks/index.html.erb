<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <h2><%= link_to task.title, task_path(task) %></h2>
  <% if task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="fab fa-xbox"></i>
  <% end %>
<% end %>
<br>
<div class="btn btn-warning"><%= link_to "Add Task", tasks_new_path %> </div>
